# 生产环境配置

# 生产环境配置

# 应用基础配置
VITE_APP_TITLE=博客系统
VITE_APP_DESCRIPTION=基于Vue+Spring Boot的博客系统
VITE_APP_VERSION=1.0.0

# API配置
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=10000

# 功能开关
VITE_USE_MOCK=false
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_CONSOLE_LOG=false
VITE_ENABLE_ERROR_LOG=true
VITE_ENABLE_PERFORMANCE_MONITOR=true

# 缓存配置
VITE_CACHE_ENABLED=true
VITE_CACHE_PREFIX=blog_cache_
VITE_CACHE_EXPIRE=3600000

# 上传配置
VITE_UPLOAD_MAX_SIZE=20971520
VITE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,md

# 主题配置
VITE_DEFAULT_THEME=light
VITE_THEME_COLOR=#1890ff

# 分页配置
VITE_PAGE_SIZE=10
VITE_PAGE_SIZE_OPTIONS=10,20,50,100

# 搜索配置
VITE_SEARCH_DEBOUNCE_DELAY=300
VITE_SEARCH_MIN_LENGTH=2
VITE_SEARCH_MAX_SUGGESTIONS=10

# 性能配置
VITE_VIRTUAL_SCROLL_THRESHOLD=100
VITE_IMAGE_LAZY_LOAD=true
VITE_COMPONENT_LAZY_LOAD=true

# 安全配置
VITE_ENABLE_CSRF=true
VITE_ENABLE_XSS_FILTER=true

# PWA配置
VITE_PWA_ENABLED=true
VITE_PWA_NAME=博客系统
VITE_PWA_SHORT_NAME=Blog
VITE_PWA_DESCRIPTION=基于Vue+Spring Boot的博客系统
VITE_PWA_THEME_COLOR=#1890ff
VITE_PWA_BACKGROUND_COLOR=#ffffff

# 构建配置
VITE_BUILD_ANALYZE=false
VITE_BUILD_GZIP=true
VITE_BUILD_DROP_CONSOLE=true
VITE_BUILD_DROP_DEBUGGER=true