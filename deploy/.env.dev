# 开发环境配置文件
# 复制此文件为 .env 并根据实际情况修改配置

# ===========================================
# 数据库配置
# ===========================================
MYSQL_ROOT_PASSWORD=root123456
MYSQL_DATABASE=blog
MYSQL_USER=blog_user
MYSQL_PASSWORD=blog_password
MYSQL_HOST=mysql-dev
MYSQL_PORT=3306

# ===========================================
# Redis配置
# ===========================================
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=3000
REDIS_COMMANDER_PASSWORD=admin123

# ===========================================
# JWT配置
# ===========================================
JWT_SECRET=your-dev-secret-key-here-change-me
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# ===========================================
# 应用配置
# ===========================================
APP_NAME=博客系统
APP_VERSION=1.0.0
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
API_BASE_URL=http://localhost:8080/api
FRONTEND_URL=http://localhost:3000

# ===========================================
# 文件上传配置
# ===========================================
FILE_UPLOAD_PATH=/app/uploads
FILE_MAX_SIZE=10485760
FILE_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,txt,zip
FILE_STORAGE_TYPE=LOCAL

# ===========================================
# 邮件配置（开发环境使用MailHog）
# ===========================================
MAIL_ENABLE=true
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@localhost
MAIL_FROM_NAME=博客系统
MAIL_ENCRYPTION=

# ===========================================
# 缓存配置
# ===========================================
CACHE_ENABLE=true
CACHE_TYPE=REDIS
CACHE_TTL=3600
CACHE_PREFIX=blog:dev:

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=DEBUG
LOG_PATH=/app/logs
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_HISTORY=30

# ===========================================
# 监控配置
# ===========================================
ACTUATOR_ENABLE=true
ACTUATOR_PORT=8080
ACTUATOR_BASE_PATH=/actuator
METRICS_ENABLE=true
HEALTH_CHECK_ENABLE=true

# ===========================================
# 安全配置
# ===========================================
SECURITY_CORS_ENABLED=true
SECURITY_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
SECURITY_RATE_LIMIT_ENABLED=false
SECURITY_CSRF_ENABLED=false

# ===========================================
# 第三方服务配置（开发环境可选）
# ===========================================

# 阿里云OSS
ALIYUN_OSS_ENABLE=false
ALIYUN_OSS_ENDPOINT=
ALIYUN_OSS_ACCESS_KEY_ID=
ALIYUN_OSS_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET_NAME=
ALIYUN_OSS_DOMAIN=

# 腾讯云COS
TENCENT_COS_ENABLE=false
TENCENT_COS_SECRET_ID=
TENCENT_COS_SECRET_KEY=
TENCENT_COS_REGION=
TENCENT_COS_BUCKET_NAME=
TENCENT_COS_DOMAIN=

# 百度统计
BAIDU_ANALYTICS_ID=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# ===========================================
# 搜索引擎配置（可选）
# ===========================================
ELASTICSEARCH_ENABLE=false
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=blog_dev

# ===========================================
# 分布式追踪配置（可选）
# ===========================================
JAEGER_ENABLE=false
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_SERVICE_NAME=blog-backend-dev

# ===========================================
# 开发工具配置
# ===========================================
DEV_TOOLS_ENABLE=true
LIVE_RELOAD_ENABLE=true
HOT_RELOAD_ENABLE=true
AUTO_RESTART_ENABLE=true

# ===========================================
# 数据库连接池配置
# ===========================================
DB_POOL_INITIAL_SIZE=5
DB_POOL_MIN_IDLE=5
DB_POOL_MAX_ACTIVE=20
DB_POOL_MAX_WAIT=60000
DB_POOL_VALIDATION_QUERY=SELECT 1
DB_POOL_TEST_ON_BORROW=true
DB_POOL_TEST_WHILE_IDLE=true

# ===========================================
# 性能配置
# ===========================================
PERFORMANCE_MONITORING_ENABLE=true
SLOW_QUERY_THRESHOLD=1000
SLOW_REQUEST_THRESHOLD=3000

# ===========================================
# 备份配置
# ===========================================
BACKUP_ENABLE=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESS=true

# ===========================================
# 前端配置
# ===========================================
VITE_API_BASE_URL=http://localhost:8080/api
VITE_USE_MOCK=false
VITE_APP_TITLE=博客系统
VITE_APP_DESCRIPTION=基于Vue3+Spring Boot的博客系统
VITE_UPLOAD_URL=http://localhost:8080/api/upload
VITE_WEBSOCKET_URL=ws://localhost:8080/ws
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false

# ===========================================
# Node.js配置
# ===========================================
NODE_ENV=development
NODE_OPTIONS=--max-old-space-size=4096

# ===========================================
# Docker配置
# ===========================================
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ===========================================
# 时区配置
# ===========================================
TZ=Asia/Shanghai