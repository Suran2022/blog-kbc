# 博客系统环境变量配置文件
# 复制此文件为 .env 并修改相应的值

# 数据库配置
MYSQL_ROOT_PASSWORD=your_strong_root_password_here
MYSQL_USER=bloguser
MYSQL_PASSWORD=your_strong_mysql_password_here

# Redis配置
REDIS_PASSWORD=your_strong_redis_password_here

# JWT密钥 (建议使用64位随机字符串)
JWT_SECRET=your_jwt_secret_key_here_should_be_very_long_and_random

# 监控配置
GRAFANA_PASSWORD=your_grafana_admin_password_here

# 域名配置
DOMAIN_NAME=localhost

# SSL证书路径 (如果使用自定义证书)
SSL_CERT_PATH=./ssl/blog.crt
SSL_KEY_PATH=./ssl/blog.key

# 文件上传配置
MAX_UPLOAD_SIZE=20M
UPLOAD_PATH=./uploads

# 邮件配置 (可选)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@yourdomain.com

# 第三方服务配置 (可选)
# 阿里云OSS
ALIYUN_OSS_ENDPOINT=
ALIYUN_OSS_ACCESS_KEY_ID=
ALIYUN_OSS_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET_NAME=

# 腾讯云COS
TENCENT_COS_SECRET_ID=
TENCENT_COS_SECRET_KEY=
TENCENT_COS_REGION=
TENCENT_COS_BUCKET=

# 百度统计
BAIDU_ANALYTICS_ID=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# 日志配置
LOG_LEVEL=INFO
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# 性能配置
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# 安全配置
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
ENABLE_CSRF_PROTECTION=true
ENABLE_XSS_PROTECTION=true

# 缓存配置
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# 数据库连接池配置
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5
DB_CONNECTION_TIMEOUT=30000